{
  "name": "@wkronmiller/prometheus-mcp-server",
  "version": "0.1.5",
  "description": "A Model Context Protocol (MCP) server that provides tools for interacting with Prometheus monitoring systems",
  "keywords": [
    "prometheus",
    "mcp",
    "model-context-protocol",
    "monitoring",
    "metrics",
    "ai",
    "claude",
    "llm",
    "typescript"
  ],
  "license": "MIT",
  "author": "William Rory Kronmiller",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prometheus-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkronmiller/mcp-server-prometheus.git"
  },
  "bugs": {
    "url": "https://github.com/wkronmiller/mcp-server-prometheus/issues"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "dotenv": "^16.4.5",
    "prometheus-query": "^3.5.0",
    "zod": "^3.22.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
